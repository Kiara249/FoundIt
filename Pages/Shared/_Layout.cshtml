<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoundIt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoundIt.styles.css" asp-append-version="true" />
    <link href="~/css/StyleLayaut.css" rel="stylesheet" />
</head>
<body style="background-color: var(--light-indigo); color: var(--lemon-meringue); padding-top: 70px; padding-bottom: 60px;">
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm fixed-top" style="background-color: var(--light-indigo); color: var(--lemon-meringue);">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="color: var(--honey); text-align:center;">
                    <lord-icon src="https://cdn.lordicon.com/dnoiydox.json"
                               trigger="hover"
                               colors="primary:#FFEBAC,secondary:#7CB8C0"
                               style="width:40px;height:40px;">
                    </lord-icon> FoundIt
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index" style="color: var(--lemon-meringue);">
                                <lord-icon src="https://cdn.lordicon.com/gmzxduhd.json"
                                           trigger="hover"
                                           colors="primary:#FFEBAC,secondary:#FFEBAC"
                                           style="width:36px;height:36px;">
                                </lord-icon>
                                <div>Home</div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Register" style="color: var(--lemon-meringue);">
                                <lord-icon src="https://cdn.lordicon.com/wzwygmng.json"
                                           trigger="hover"
                                           colors="primary:#FFEBAC,secondary:#FFEBAC"
                                           style="width:36px;height:36px;">
                                </lord-icon>
                                <div>Register Item</div>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Search" style="color: var(--lemon-meringue);">
                                <lord-icon src="https://cdn.lordicon.com/msoeawqm.json"
                                           trigger="hover"
                                           colors="primary:#FFEBAC,secondary:#FFEBAC"
                                           style="width:36px;height:36px;">
                                </lord-icon>
                                <div>Search Item</div>
                            </a>
                        </li>
                        <!-- el login 
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Login" style="color: var(--lemon-meringue);">
                                <lord-icon src="https://cdn.lordicon.com/qhviklyi.json"
                                           trigger="hover"
                                           colors="primary:#FFEBAC,secondary:#FFEBAC"
                                           style="width:36px;height:36px;">
                                </lord-icon>
                                <div>Login</div>
                            </a>
                        </li>
                        -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy" style="color: var(--lemon-meringue);">
                                <lord-icon src="https://cdn.lordicon.com/khheayfj.json"
                                           trigger="hover"
                                           stroke="bold"
                                           colors="primary:#FFEBAC,secondary:#FFEBAC"
                                           style="width:36px;height:36px">
                                </lord-icon>
                                <div>Privacy</div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted fixed-bottom" style="background-color: var(--light-indigo); color: var(--lemon-meringue);">
        <div class="container text-center">
            &copy; 2024 - FoundIt - <a asp-area="" asp-page="/Privacy" style="color: var(--honey);">Privacy</a>
            <div class="social-icons">
                <a href="https://facebook.com" target="_blank" aria-label="Facebook">
                    <lord-icon src="https://cdn.lordicon.com/iqagrlso.json"
                               trigger="hover"
                               stroke="bold"
                               colors="primary:#FFEBAC,secondary:#FFEBAC"
                               style="width:36px;height:36px">
                    </lord-icon>
                </a>
                <a href="https://instagram.com" target="_blank" aria-label="Instagram">
                    <lord-icon src="https://cdn.lordicon.com/ewswvzmw.json"
                               trigger="hover"
                               stroke="bold"
                               colors="primary:#FFEBAC,secondary:#FFEBAC"
                               style="width:36px;height:36px">
                    </lord-icon>
                </a>
                <a href="https://x.com" target="_blank" aria-label="X">
                    <lord-icon src="https://cdn.lordicon.com/lhscugaw.json"
                               trigger="hover"
                               stroke="bold"
                               colors="primary:#FFEBAC,secondary:#FFEBAC"
                               style="width:36px;height:36px">
                    </lord-icon>
                </a>
            </div>
        </div>
    </footer>

    <script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>